#!/usr/bin/env bash
set -eou pipefail

wget https://github.com/cbednarski/hostess/releases/download/v0.3.0/hostess_linux_386
sudo chmod u+x hostess_linux_386
sudo mv hostess_linux_386 /usr/local/bin/hostess

sudo hostess add "citygroves.keycloak.$CG_STAGE" "$CG_CLUSTER_ADDRESS"
sudo hostess add "citygroves.frontend.$CG_STAGE" "$CG_CLUSTER_ADDRESS"
sudo hostess add "citygroves.backend.$CG_STAGE" "$CG_CLUSTER_ADDRESS"
