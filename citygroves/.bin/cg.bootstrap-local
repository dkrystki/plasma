#!/usr/bin/env bash
set -eou pipefail

pl.create-kind-cluster "$CG_CLUSTER_NAME" "$CG_PROJECT_ROOT/kind.yaml" "$CG_REGISTRY_IP" "$CG_REGISTRY_ADDRESS"

cd $CG_PROJECT_ROOT

# reload env to populate CG_CLUSTER_ADDRESS env (needed for add-hosts)
eval "$(./shell.py $CG_STAGE --dry-run)"

cg.add-hosts

pl.init-helm
