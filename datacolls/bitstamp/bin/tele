#!/usr/bin/env bash

. "$SHANGREN_ROOT"/header.sh
unload telepresence envs
bash "$SHANGREN_ROOT"/comm/bash/tele/start.sh datacolls bitstamp "$PROJECT_DIR"

function shell {
  function check_if_running() {
      A=1
  }
  export PROJECT_DIR
  PROJECT_DIR=$(pwd)

  source "$SHANGREN_ROOT"/setup_stage.sh
  source bin/activate
  export CUSTOM_PS1="$CUSTOM_PS1(dc-bitstamp)"

  cd flesh || return

  export VIRTUAL_ENV
  VIRTUAL_ENV=$( dirname "$(dirname "$(pipenv run which python)")")
  PATH_add "$VIRTUAL_ENV/bin"
  PATH_add "../bin"

  PROMPT_COMMAND
}

if [ "$1" == "shell" ]
then
  shell
fi
